# Configurações de Segurança SACSWeb
NODE_ENV=development
PORT=3000

# JWT Secret (GERE UMA CHAVE FORTE EM PRODUÇÃO)
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_mude_em_producao
JWT_EXPIRES_IN=1h

# Configurações de Sessão
SESSION_SECRET=sua_chave_sessao_super_secreta_aqui_mude_em_producao

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Brute Force Protection
BRUTE_FORCE_FREE_RETRIES=5
BRUTE_FORCE_LIFETIME=300000
BRUTE_FORCE_RESET_TIMEOUT=600000

# Configurações de Banco de Dados MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=sacsweb_user
DB_PASSWORD=sua_senha_mysql_aqui
DB_NAME=sacsweb_db
DB_CHARSET=utf8mb4

# Configurações de CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Configurações de Log
LOG_LEVEL=info 