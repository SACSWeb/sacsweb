# SACSWeb Educacional - Configurações de Ambiente
# Copie este arquivo para .env e configure as variáveis

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações do Banco de Dados
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=sacsweb_educacional
DB_PORT=3306

# Configurações de Segurança
JWT_SECRET=sacsweb-jwt-secret-change-in-production
SESSION_SECRET=sacsweb-session-secret-change-in-production

# Configurações do Cliente
CLIENT_URL=http://localhost:3000

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/sacsweb.log 